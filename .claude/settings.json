{
  "mcpServers": {
    "browser-tools": {
      "command": "npx",
      "args": ["@agentdeskai/browser-tools-mcp@1.2.0"]
    }
  },
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env*)",
      "Read(**/.secret*)",
      "Read(**/env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cert)",
      "Read(**/secrets/**)",
      "Read(**/node_modules/**)",
      "Read(**/credentials/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/log_pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/use_bun.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/play_audio.py build_complete"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/windows_notification.py build_complete"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/ts_lint.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/play_audio.py ready"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/windows_notification.py ready"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/play_audio.py error_fixed"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/play_audio.py "
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/windows_notification.py awaiting_instructions"
          }
        ]
      }
    ]
  }
}
