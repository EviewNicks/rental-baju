{
  "info": {
    "name": "Product Management API",
    "description": "API untuk manajemen produk dan kategori dengan authentication Clerk",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "cookie",
    "cookie": [
      {
        "key": "__session",
        "value": "{{clerk_session_token}}",
        "description": "Clerk session token dari browser"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "description": "Base URL aplikasi"
    },
    {
      "key": "product_id",
      "value": "",
      "description": "ID produk untuk testing"
    },
    {
      "key": "category_id",
      "value": "",
      "description": "ID kategori untuk testing"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products?page=1&limit=10&search=&categoryId=&status=&isActive=true",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Halaman yang diminta"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Jumlah item per halaman"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Pencarian berdasarkan nama/kode produk"
                },
                {
                  "key": "categoryId",
                  "value": "",
                  "description": "Filter berdasarkan kategori"
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Filter berdasarkan status (AVAILABLE/RENTED/MAINTENANCE)"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter produk aktif/nonaktif"
                }
              ]
            },
            "description": "Mendapatkan daftar produk dengan pagination dan filter"
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            },
            "description": "Mendapatkan detail produk berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "code",
                  "value": "DRS1",
                  "description": "Kode produk (4 digit alfanumerik uppercase)",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "Dress Elegant",
                  "description": "Nama produk",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Dress untuk acara formal",
                  "description": "Deskripsi produk (opsional)",
                  "type": "text"
                },
                {
                  "key": "modalAwal",
                  "value": "150000",
                  "description": "Biaya pembuatan produk",
                  "type": "text"
                },
                {
                  "key": "hargaSewa",
                  "value": "50000",
                  "description": "Harga sewa per sekali",
                  "type": "text"
                },
                {
                  "key": "quantity",
                  "value": "5",
                  "description": "Jumlah stok",
                  "type": "text"
                },
                {
                  "key": "categoryId",
                  "value": "{{category_id}}",
                  "description": "ID kategori",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "description": "Gambar produk (opsional)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/products",
              "host": ["{{base_url}}"],
              "path": ["api", "products"]
            },
            "description": "Membuat produk baru dengan upload gambar"
          },
          "response": []
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Dress Elegant Updated",
                  "description": "Nama produk baru",
                  "type": "text"
                },
                {
                  "key": "hargaSewa",
                  "value": "60000",
                  "description": "Harga sewa baru",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "description": "Gambar produk baru (opsional)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            },
            "description": "Mengupdate produk berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            },
            "description": "Soft delete produk berdasarkan ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/categories?search=&includeProducts=false",
              "host": ["{{base_url}}"],
              "path": ["api", "categories"],
              "query": [
                {
                  "key": "search",
                  "value": "",
                  "description": "Pencarian berdasarkan nama kategori"
                },
                {
                  "key": "includeProducts",
                  "value": "false",
                  "description": "Include produk dalam response"
                }
              ]
            },
            "description": "Mendapatkan daftar kategori"
          },
          "response": []
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "categories", "{{category_id}}"]
            },
            "description": "Mendapatkan detail kategori berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dress\",\n  \"color\": \"#FF5733\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/categories",
              "host": ["{{base_url}}"],
              "path": ["api", "categories"]
            },
            "description": "Membuat kategori baru"
          },
          "response": []
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dress Updated\",\n  \"color\": \"#FF8C42\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "categories", "{{category_id}}"]
            },
            "description": "Mengupdate kategori berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "categories", "{{category_id}}"]
            },
            "description": "Menghapus kategori berdasarkan ID"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default headers",
          "pm.request.headers.add({",
          "  key: 'User-Agent',",
          "  value: 'PostmanRuntime/7.32.3'",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Common test script",
          "pm.test('Status code is 200 or 201', function () {",
          "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response has required structure', function () {",
          "  const response = pm.response.json();",
          "  pm.expect(response).to.have.property('id');",
          "});",
          "",
          "// Store IDs for subsequent requests",
          "if (pm.response.code === 201 || pm.response.code === 200) {",
          "  const response = pm.response.json();",
          "  if (response.id) {",
          "    if (pm.request.url.path.includes('products')) {",
          "      pm.collectionVariables.set('product_id', response.id);",
          "    } else if (pm.request.url.path.includes('categories')) {",
          "      pm.collectionVariables.set('category_id', response.id);",
          "    }",
          "  }",
          "}"
        ]
      }
    }
  ]
}
